#include <vector>
#include <iostream>

using namespace std;

int qs_choco_partition(int a[], int lo, int hi) {
  int x = median_of_3(a, lo, hi); // partition element
  while (lo <= hi) {
    while (a[lo] < x) lo++;
    while (a[hi] > x) hi--;
    if (lo <= hi) swap(a[lo++], a[hi--]);
  }
  return lo;
}

void qs_choco(int a[], int lo, int hi) {
  while (lo < hi) {
    int m = qs_choco_partition(a, lo, hi);
    if (m - lo < hi - m + 1) {
      qs_choco(a, lo, m - 1);
      lo = m;
    } else {
      qs_choco(a, m, hi);
      hi = m - 1;
    }
  }
}
